#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBBAZ_VERSION       $libbaz.version.project_number$ULL
#define LIBBAZ_VERSION_STR   "$libbaz.version.project$"
#define LIBBAZ_VERSION_ID    "$libbaz.version.project_id$"
#define LIBBAZ_VERSION_FULL  "$libbaz.version$"

#define LIBBAZ_VERSION_MAJOR $libbaz.version.major$
#define LIBBAZ_VERSION_MINOR $libbaz.version.minor$
#define LIBBAZ_VERSION_PATCH $libbaz.version.patch$

#define LIBBAZ_PRE_RELEASE   $libbaz.version.pre_release$

#define LIBBAZ_SNAPSHOT_SN   $libbaz.version.snapshot_sn$ULL
#define LIBBAZ_SNAPSHOT_ID   "$libbaz.version.snapshot_id$"
